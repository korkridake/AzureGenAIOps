# Azure AI Foundry Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_LOCATION=eastus
AZURE_AI_PROJECT_NAME=your-ai-foundry-project

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure AI Search (for RAG)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=documents

# Azure Document Intelligence (for data extraction)
AZURE_DOC_INTELLIGENCE_ENDPOINT=https://your-doc-intelligence.cognitiveservices.azure.com/
AZURE_DOC_INTELLIGENCE_API_KEY=your-doc-intelligence-key

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_CONTAINER_NAME=llm-data

# Azure Key Vault
AZURE_KEY_VAULT_NAME=your-key-vault

# Embedding Models Configuration
EMBEDDING_MODEL_NAME=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# LLM Training Configuration
TRAINING_DATA_PATH=data/training
MAX_TRAINING_TOKENS=100000
TRAINING_EPOCHS=3

# Safety and Security Configuration
CONTENT_FILTER_ENABLED=true
PII_DETECTION_ENABLED=true
JAILBREAK_DETECTION_ENABLED=true

# Monitoring Configuration
AZURE_MONITOR_CONNECTION_STRING=your-monitor-connection-string
ENABLE_TELEMETRY=true

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000

# Legacy MLflow (optional)
MLFLOW_TRACKING_URI=http://localhost:5000